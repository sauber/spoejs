<%perl>
  my $url = $ENV{PATH_INFO};
  my ( $link, $options ) = $m->comp('/htm/url:decode', $url );

  # Default to configured, then 'default' theme if none is given in URL
  $$options{t} ||= #$channelconf->get(theme) || 
            'default';

  $spoejs{p} = $options;
  $spoejs{url_noparam} = $link;
</%perl>
