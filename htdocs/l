%# Put input (available in $m->content) through Resource
<% $spoejs{res_handle}->get( $m->content ) %>\
<%perl>
  return $spoejs{res_handle}->get( $ARGS{l} );
</%perl>
<%init>
$spoejs{error}{lang} = "Error in resource: $spoejs{res_handle}->{msg}" 
                                                 if $spoejs{res_handle}->{msg};
</%init>
