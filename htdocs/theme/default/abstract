<h3><% $title %></h3>
<br/>
<div class="left">
     <& /w, w => 'categoryicon', category => $category, size => $icon_size &>
<div class="bottom">
<a href="<% $story_href %>">**view**</a>
% if ( $edit_href ) {
<a href="<% $edit_href %>">**edit**</a>
% }
</div>
</div>
% if ( $thumb_file ) {
<div class="right">
    <& /w, w => 'media', d => $path, p => $thumb_file,
           m => 150, href=>$story_href &>
</div>
% }
<div class="center">
<b>**date**:</b> <% $date %><br/>
<b>**posted_by**:</b> <% $author %><br/>
<b>**category**:</b> <% $category %><br/>
<b>**views**:</b> <% $views %><br/>
<b>**media_count**:</b> <% $num_media %><br/>
<& /w, w => "text", text=>$abstract &>
</div>
<%args>
  $title      => undef
  $author     => undef
  $category   => undef
  $date       => undef
  $abstract   => undef
  $icon_size  => undef
  $story_href => undef
  $path       => undef
  $edit_href  => undef
  $thumb_file => undef
  $views      => 0
  $num_media  => 0
</%args>
