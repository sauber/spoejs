<img src="<& /htm/url:encode, "/ico/ico.jpg", c=>$category, m=>$size&>" alt="<% $category %> icon"/>\
%#width="<%$size%>" height="<%$size%>"
<%args>
    $category => undef
    $size => undef
</%args>
