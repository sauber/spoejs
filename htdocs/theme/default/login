<form method="post" action="<%$action%>">
% if ( $session{$ses_var} ) {
<input type="submit" name="logout" value="<&|/l&>logout</&>"/></td>
% } else {
<table>
<tr>
  <td><&|/l&>username</&>:</td>
  <td><input type="text" name="username" /></td>
</tr><tr>
  <td><&|/l&>passwd</&>:</td>
  <td><input type="password" name="password" /></td>
</tr><tr>
  <td><input type="submit" name="login" value="<&|/l&>login</&>"/></td>
</tr>
</table>
% }
</form>
<%args>
 $action => undef
 $ses_var => undef
</%args>