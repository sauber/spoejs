<form method="post" action="<%$action%>" class="topbar">
% if ( defined $session{$ses_var} ) {
<input type="submit" name="logout" value="<&|/l&>logout</&>"/>
% } else {
<table cellspacing="0" border="0">
<tr>
  <td><&|/l&>username</&>:</td>
  <td><input size="10" type="text" name="username" tabindex="1" /></td>
  <td><input type="submit" name="login" value="<&|/l&>login</&>"/></td>
</tr>
<tr>
  <td><&|/l&>passwd</&>:</td>
  <td><input size="10" type="password" name="password" tabindex="2" /></td>
%if ( $show_signup ) {
  <td><a href="/htm/admin/signup.html"><font size="1"><&|/l&>new_account</&></font></a></td>
% } else {
<td>&nbsp;</td>
%}
</tr>
</table>
% }
</form>
<%args>
 $action => undef
 $ses_var => undef
</%args>
<%init>
my $policy = $spoejs{SiteConf}->get( 'policy' );
my $show_signup;
if ( ( $policy eq 'freeall' or $policy eq 'signup_approve')
#     and !defined $spoejs{channel} 
) {
  $show_signup = 1;
}
</%init>
