<form method="post" action="/html/change_lang.html">
<select name="language">
% foreach my $lang ( sort keys %langs ) {
% my $sel = $m->{session}{pref_lang} eq $lang ? ' selected="selected"' : ' ';
<option value="<% $lang %>"<% $sel %>>
<% $langs{$lang} %>
</option>
%}
</select>
<input type="submit" value="<&|/l&>change</&>"/>
</form>
<%init>
  my %langs = $m->{session}{lang_handle}->lang_list();
</%init>
