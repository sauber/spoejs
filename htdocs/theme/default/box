%# put html output inside a box
%#
%# License: Artistic License
%#          http://www.opensource.org/licenses/artistic-license.php
%#
%# $Id: box,v 1.4 2004/04/10 07:21:08 sauber Exp $
%#
<%args>
$content => undef
$heading => undef
</%args>
<%init>
unless ( $heading ) {
  $content =~ s!^<h.>(.*?)</h.>$!!im and $heading = $1;
}
</%init>
<fieldset>
<legend><% $heading %></legend>\
<% $content %>
</fieldset>\
