<%args>
$paragraphs=>undef
</%args>
% for my $p ( @$paragraphs ) {
%   if ( $p->{type} eq 'text' ) {
<pre><% $p->{content} %></pre>
%   } elsif ( $p->{type} eq 'media' ) {
<br clear="all"/>
<& /w, w => 'album', ml => $p->{content} &>
<br clear="all"/>
%   }
% }
