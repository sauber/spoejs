<center>
% if ( $prev_href ) {
<a href="<% $prev_href %>">
&laquo;
</a>
% } else {
&laquo;
% }
|
% if ( $next_href ) {
<a href="<% $next_href %>">
&raquo;
</a>
% } else {
&raquo;
% }
</center>
<%args>
  $next_href => undef
  $prev_href => undef
</%args>
