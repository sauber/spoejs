<img src="<& /htm/url:encode, "/ico/ico.jpg", c=>$category, m=>$size&>" alt="<% $category %> icon" align=center vspace=9 hspace=5/>\
%#width="<%$size%>" height="<%$size%>"
<%args>
    $category => undef
    $size => undef
</%args>
